@keyframes wordsLoop
  0%
    margin-left 0
    transform translateX(0)
  20%
    margin-left 0
    transform translateX(0)
  80%
    margin-left 100%
    transform translateX(-100%)
  100%
    margin-left 100%
    transform translateX(-100%)

.auto-scroll
  max-width 100%
  display inline-block
  vertical-align top
  overflow hidden
  white-space nowrap
  .item
    animation 10s wordsLoop linear infinite alternate
    float left
